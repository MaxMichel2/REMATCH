<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".APImapsActivity">

    <Button
        android:id="@+id/buttonStore"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Magasins"
        android:textColor="#FFDD33"/>
    <Button
        android:id="@+id/buttonRestaurant"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Restaurants"
        android:textColor="#5A3B5D"/>


    <Button
        android:id="@+id/buttonMovieTheater"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Cinémas/Théâtres"
        android:textColor="#FFDD33"/>

    <Button
        android:id="@+id/buttonHospital"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Hôpitaux"
        android:textColor="#5A3B5D"/>

    <Button
        android:id="@+id/buttonBank"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Banques"
        android:textColor="#FFDD33"/>

    <Button
        android:id="@+id/buttonATM"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Distributeurs"
        android:textColor="#5A3B5D"/>

    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1000dp"/>


</LinearLayout>
