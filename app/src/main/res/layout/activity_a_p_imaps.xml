<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".APImapsActivity"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/buttonStore"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Magasins"
        android:textColor="#FFDD33"
        android:textSize="40sp"/>
    <Button
        android:id="@+id/buttonRestaurant"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Restaurants"
        android:textColor="#5A3B5D"
        android:textSize="40sp"/>


    <Button
        android:id="@+id/buttonMovieTheater"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Cinémas"
        android:textColor="#FFDD33"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/buttonHospital"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Hôpitaux"
        android:textColor="#5A3B5D"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/buttonBank"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Banques"
        android:textColor="#FFDD33"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/buttonATM"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="Distributeurs"
        android:textColor="#5A3B5D"
        android:textSize="40sp"/>


    </LinearLayout>
</ScrollView></LinearLayout>